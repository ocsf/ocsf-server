<div class="row">
  <div class="col-md move-up">
    <h3><%= @data[:caption] %>
      <span class="text-secondary">
        [<%= @data[:uid] %>]<sup><%= @data[:extension] || "" %></sup>
        Category
      </span>
    </h3>
    <div class="text-dark"><%= raw description(@data) %></div>
  </div>
  <div class="col-md-auto fixed-right mt-2">
    <div class="form-inline">
      <ul class="navbar-nav">
        <li class="nav-item">
          <input type="text" id="tableSearch" onkeyup="searchInTable()" class="form-control border-dark" placeholder="Search" autofocus>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="mt-4">
  <table class="table table-striped table-bordered sortable">
    <thead>
      <tr class="thead-color">
        <th style="width: 30%">Name</th>
        <th style="width: 10%">ID</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody class="searchable">
      <%= for {id, class} <- @data[:classes] do %>
      <% name = Atom.to_string(id) %>
      <% path = Routes.static_path(@conn, "/classes/" <> name) %>
      <tr class="extensions ocsf-class" <%= raw format_profiles(class[:profiles])%>>
        <td class="name">
          <a href="<%= path %>"><%= raw format_caption(name, class) %></a>
        </td>
        <% uid = class[:uid] %>
        <%= if uid != nil do %>
          <td><a href="<%= path %>"><%= uid %></a></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= raw description(class) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script>
  init_class_profiles();
</script>
